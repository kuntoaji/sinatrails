!!! 5
%html
  %head
    %title= "Sinatrails"
    = css_link_tag :screen
    /[if lt IE 9]
      %script{:src=>"http://html5shiv.googlecode.com/svn/trunk/html5.js"}
  %body
    %header#top
      .container
        #logo
          %h1
            %a{:href => "/"}
        #navigation
          %nav
            %ul
              - if current_user
                %li
                  %a{:href=>"/users"}
                    Users
                %li
                  %a{:href=>"/users/#{current_user.id}"}
                    Profile
                %li
                  %a{:href=>"/logout"}
                    Logout              
              - else
                %li
                  %a{:href=>"/login"}
                    Login              
    #wrapper
      - if flash.has? :error
        #message.error
          %p
            %strong
              Error:
            = flash[:error]
      = yield
    %script{:src => "http://ajax.googleapis.com/ajax/libs/jquery/1.4.2/jquery.min.js"}
    = js_link_tag :sinatrails
    = js_link_tag :application
